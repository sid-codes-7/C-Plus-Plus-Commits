# include <iostream>

int main() {

//assign integer variables

    int num = 0;
    int guess = 0;
    int tries = 0;

    srand(time(NULL));         
    num = (rand() % 100) + 1;  // get the random numbers between 1-100.

    std::cout << "**** NUMBER GUESSING GAME ******\n";

    do{
        std::cout << "Enter a guess between (1-100): ";
        std::cin >> guess;
        tries++;      //tells us how many tries we take to guess #

        if(guess > num){
            std::cout << "Too high!\n";
        }
        else if(guess < num){
            std::cout << "Too low!\n";
        }
        else{
            std::cout << "CORRECT! # of tries: " << tries << '\n';
        }

    }while(guess != num);   //the loop will keep repeating until user has found missing #

    std::cout << "**********************************";

    return 0;
}
